<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LLregistrationform1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txtCompletetheff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="Complete the following details to create your own lifebeam account"
            android:textColor="#9f9f9f"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#34bdc2"
            android:textColorHint="#34bdc2"
            android:textSize="18dp"
            android:layout_marginTop="35dp"
            android:hint="First Name"
            android:inputType="textPersonName" >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#34bdc2"
            android:textColorHint="#34bdc2"
            android:textSize="18dp"
            android:hint="Last Name"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName" />
        
        <EditText
            android:id="@+id/mobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#34bdc2"
            android:textColorHint="#34bdc2"
            android:textSize="18dp"
            android:hint="Mobile Number"
            android:layout_marginTop="20dp"
            android:inputType="phone" />
        
        <EditText
            android:id="@+id/emailaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#34bdc2"
            android:textColorHint="#34bdc2"
            android:textSize="18dp"
            android:hint="Email Address"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLregistrationform2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone" >
        
        <TextView
            android:id="@+id/Touselifebeam "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="To use lifebeam you need to be associated to a family account."
            android:textSize="15dp"
            android:textColor="#9f9f9f"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="If you're joining an existing family account please enter the family name below otherwise create a new name family account."
            android:textSize="15dp"
            android:textColor="#9f9f9f"
            android:padding="10dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="50dp"
                    android:text="Create new family"
                    android:textSize="15dp"
            		android:textColor="#9f9f9f" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"  >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Name"
                    android:textSize="15dp"
            		android:textColor="#9f9f9f" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Rodriquez"
                    android:textSize="15dp"
                    android:textColor="#3fc1c6" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"  >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passcode"
                    android:textSize="15dp"
            		android:textColor="#9f9f9f" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="123456"
                    android:textColor="#3fc1c6"
                    android:textSize="15dp" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLregistrationform3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="gone" >
        
         <TextView
            android:id="@+id/Touselifebeam "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="Below is the secure passcode other members of your family will require to join your account, these details have also been emailed to you."
            android:textSize="14dp"
            android:textColor="#9f9f9f"
            android:padding="10dp" />

         <TableLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"  >

             <TableRow
                 android:id="@+id/tableRow4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="Family Name"
                     android:textColor="#9f9f9f"
                     android:textSize="16dp" />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Rodriquez"
                     android:textSize="30dp"
            		 android:textColor="#9f9f9f"  />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView9"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="Passcode"
                     android:textColor="#9f9f9f"
                     android:textSize="16dp" />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp">

                 <TextView
                     android:id="@+id/textView10"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="1234567"
                     android:textSize="30dp"
            		 android:textColor="#9f9f9f" />

             </TableRow>
         </TableLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginTop="15dp"
             android:padding="20dp" >

             <Button
                 android:id="@+id/button1"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="@drawable/rounded_cornerskyblue"
                 android:text="Invite Family Members"
                 android:textColor="#ffffff" />
             
             <Button
	             android:id="@+id/button2"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:layout_marginTop="10dp"
	             android:background="@drawable/rounded_cornerskyblue"
	             android:text="Continue to Life Beam"
	             android:textColor="#ffffff" />

         </LinearLayout>

         
         
    </LinearLayout>
  
</RelativeLayout>
