<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llyGalleryItemContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/listbg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgPix"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_imggallery" />

        <LinearLayout
            android:id="@+id/llyGalleryItemContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:background="@color/lifebeamBlue"
                android:padding="5dp"
                android:text="Renante Rebucas"
                android:textColor="@color/White"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/llyDateHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="November 27\, 1968"
                    android:textColor="@color/lifebeamBlue"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="06:0 am"
                    android:textColor="@color/lifebeamBlue"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyDivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/White"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Beach with the Family"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/llyItemRateContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/lifebeamBlue"
            android:gravity="right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llyListDetailHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_list" />

                <TextView
                    android:id="@+id/txtMessageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="5"
                    android:textColor="@color/White"
                    android:textSize="10dp" />

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/llyListDetailHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_love" />

                <TextView
                    android:id="@+id/txtLikedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="2"
                    android:textColor="@color/White"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>