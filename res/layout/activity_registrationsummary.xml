<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:id="@+id/LLregistrationform3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="visible" >
        
         <TextView
            android:id="@+id/Touselifebeam "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="Below is the secure passcode other members of your family will require to join your account, these details have also been emailed to you."
            android:textSize="14dp"
            android:textColor="#9f9f9f"
            android:padding="10dp" />

         <TableLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"  >

             <TableRow
                 android:id="@+id/tableRow4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="Family Name"
                     android:textColor="#9f9f9f"
                     android:textSize="16dp" />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Rodriquez"
                     android:textSize="30dp"
            		 android:textColor="#9f9f9f"  />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp" >

                 <TextView
                     android:id="@+id/textView9"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="Passcode"
                     android:textColor="#9f9f9f"
                     android:textSize="16dp" />

             </TableRow>

             <TableRow
                 android:id="@+id/tableRow7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:paddingTop="10dp"
                 android:paddingBottom="10dp">

                 <TextView
                     android:id="@+id/textView10"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="1234567"
                     android:textSize="30dp"
            		 android:textColor="#9f9f9f" />

             </TableRow>
         </TableLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginTop="10dp"
             android:paddingTop="10dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:paddingBottom="0dp">

             <Button
                 android:id="@+id/btnInvite"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="@drawable/rounded_cornerskyblue"
                 android:text="Invite Family Members"
                 android:textColor="#ffffff"
                  />
             
             <Button
	             android:id="@+id/btnContinue"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:layout_marginTop="10dp"
	             android:background="@drawable/rounded_cornerskyblue"
	             android:text="Continue to Life Beam"
	             android:textColor="#ffffff" />

         </LinearLayout>

         
         
    </LinearLayout>

</RelativeLayout>
